<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tech Store</title>
    <link rel="icon" href="~/favicon.svg" type="image/svg+xml" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
       @*  <!-- Top Bar -->
        <div class="bg-dark text-white py-2">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small>
							<i class="fas fa-phone-alt me-2"></i>(+20) 127 996 7311
                            <span class="mx-3">|</span>
                            <i class="fas fa-envelope me-2"></i>support@techstore.com
                        </small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small>
                            <i class="fas fa-truck me-2"></i>Free Shipping on Orders Over $50
                        </small>
                    </div>
                </div>
            </div>
        </div> *@

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <!-- Brand Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-laptop-code fa-2x text-primary me-2"></i>
                    <span class="fw-bold fs-4">Tech Store</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-shopping-bag me-1"></i>Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Right Side Icons -->
                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                        @await Html.PartialAsync("_CartBadge")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-auto">
        <!-- Main Footer Content -->
        <div class="container py-5">
            <div class="row">
                <!-- About Column -->
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-3">
                        <i class="fas fa-laptop-code me-2"></i>Tech Store
                    </h5>
                    <p class="text-light">
                        Your one-stop shop for the latest tech products. From laptops to smartphones, 
                        we offer premium quality electronics at competitive prices.
                    </p>
                    <div class="mt-3">
                        <a href="#" class="text-white me-3" aria-label="Facebook"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-white me-3" aria-label="Twitter"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-white me-3" aria-label="Instagram"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-white me-3" aria-label="LinkedIn"><i class="fab fa-linkedin fa-lg"></i></a>
                        <a href="#" class="text-white" aria-label="YouTube"><i class="fab fa-youtube fa-lg"></i></a>
                    </div>
                </div>

                <!-- Quick Links Column -->
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>Home
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Products" asp-action="Index" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>Products
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>About Us
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>Contact
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Customer Service Column -->
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-3">Customer Service</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>Shipping Information
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>Returns & Exchanges
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>FAQ
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">
                                <i class="fas fa-chevron-right me-2"></i>Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contact Column -->
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-3">Contact Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            123 Tech Avenue<br>
                            <span class="ms-4">Innovation City, TC 12345</span>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-phone me-2"></i>
							<a href="tel:+15551234567" class="text-light text-decoration-none">(+20) 127 996 7311</a>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2"></i>
                            <a href="mailto:support@techstore.com" class="text-light text-decoration-none">support@techstore.com</a>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-clock me-2"></i>
                            Mon - Fri: 9:00 AM - 6:00 PM
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="border-top border-secondary">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                        <small class="text-light">We Accept:</small>
                        <i class="fab fa-cc-visa fa-2x ms-2 text-light"></i>
                        <i class="fab fa-cc-mastercard fa-2x ms-2 text-light"></i>
                        <i class="fab fa-cc-amex fa-2x ms-2 text-light"></i>
                        <i class="fab fa-cc-paypal fa-2x ms-2 text-light"></i>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <small class="text-light">
                            <i class="fas fa-shield-alt me-1"></i>Secure Payment
                            <span class="mx-2">|</span>
                            <i class="fas fa-lock me-1"></i>SSL Encrypted
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyright Bar -->
        <div class="bg-black py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start">
                        <small class="text-light">
                            &copy; 2026 Tech Store. All Rights Reserved.
                        </small>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <small class="text-light">
                            Built with <i class="fas fa-heart text-danger"></i> using ASP.NET Core
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
