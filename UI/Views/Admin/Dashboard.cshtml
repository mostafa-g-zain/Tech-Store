@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold">
                <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
            </h1>
            <hr />
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Products</h5>
                    <p class="card-text text-muted">Manage product catalog and inventory.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-right me-1"></i>Go to Products
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text text-muted">Manage product categories.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-success">
                        <i class="fas fa-arrow-right me-1"></i>Go to Categories
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Users</h5>
                    <p class="card-text text-muted">View registered users.</p>
                    <span class="btn btn-outline-secondary disabled">
                        <i class="fas fa-clock me-1"></i>Coming Soon
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
