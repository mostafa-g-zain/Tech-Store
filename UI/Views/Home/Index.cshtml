@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Tech Store</h1>
    <p class="lead">Your one-stop shop for the latest tech products</p>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg mt-3">Browse Products</a>
</div>

<div class="row mt-5">
    <div class="col-md-4 text-center">
        <i class="fas fa-laptop fa-3x text-primary mb-3"></i>
        <h3>Latest Laptops</h3>
        <p>High-performance laptops for gaming, business, and everyday use</p>
    </div>
    <div class="col-md-4 text-center">
        <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
        <h3>Smartphones</h3>
        <p>Latest iPhone and Android devices with cutting-edge features</p>
    </div>
    <div class="col-md-4 text-center">
        <i class="fas fa-headphones fa-3x text-primary mb-3"></i>
        <h3>Accessories</h3>
        <p>Premium headphones, keyboards, and more tech accessories</p>
    </div>
</div>
