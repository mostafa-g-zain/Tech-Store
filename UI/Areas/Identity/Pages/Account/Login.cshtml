@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-start g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-2">
                        <i class="fas fa-right-to-bracket me-2"></i>Welcome back
                    </h2>
                    <p class="text-muted text-center mb-4">Sign in to continue shopping</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label"></label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot password?</a>
                        </div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                            <i class="fas fa-right-to-bracket me-2"></i>Log in
                        </button>
                        <div class="text-center mt-3">
                            <span class="text-muted">New to Tech Store?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm bg-light h-100">
                <div class="card-body p-4">
                    <h5 class="fw-semibold mb-3">Why shop with us?</h5>
                    <ul class="list-unstyled text-muted mb-0">
                        <li class="mb-2"><i class="fas fa-shield-alt text-primary me-2"></i>Secure checkout and trusted payment methods</li>
                        <li class="mb-2"><i class="fas fa-truck text-primary me-2"></i>Fast delivery on top tech products</li>
                        <li class="mb-2"><i class="fas fa-tags text-primary me-2"></i>Exclusive offers for registered customers</li>
                        <li><i class="fas fa-headset text-primary me-2"></i>Dedicated support whenever you need it</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
